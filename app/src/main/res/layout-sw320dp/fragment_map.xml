<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.motion.MotionLayout android:id="@+id/motion02_Layout_map_fragment"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/scene02"
    tools:showPaths="true"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:id="@+id/google_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/tv_delete_marker"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="32dp"
        android:text="@string/tv_delete"
        android:textAlignment="center"
        android:textSize="16sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/google_map"
        app:layout_constraintEnd_toStartOf="@+id/google_map"
        app:layout_constraintStart_toEndOf="@+id/google_map" />

    <Button
        android:id="@+id/btn_add_place"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_add_circle_black_24dp"
        />

</android.support.constraint.motion.MotionLayout>